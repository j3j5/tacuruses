{
    "name": "j3j5/fedibots",
    "type": "project",
    "description": "An application to make bots for the fediverse",
    "keywords": [
        "fediverse",
        "bots",
        "activitypub",
        "laravel"
    ],
    "license": "AGPLv3",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/j3j5/activitypub"
        },
        {
            "type": "vcs",
            "url": "https://github.com/laravel-shift/fast-paginate.git"
        }
    ],
    "require": {
        "php": "^8.3",
        "calebporzio/parental": "^1.4",
        "godruoyi/php-snowflake": "^2.2",
        "hammerstone/fast-paginate": "dev-l11-compatibility",
        "landrok/activitypub": "dev-master",
        "laravel/framework": "^11.0",
        "laravel/horizon": "^5.15",
        "laravel/sanctum": "^4.0",
        "laravel/tinker": "^2.9",
        "nojimage/twitter-text-php": "^3.2",
        "nyholm/psr7": "^1.8",
        "opcodesio/log-viewer": "^3.0",
        "phpseclib/phpseclib": "^3.0",
        "roave/security-advisories": "dev-latest",
        "sentry/sentry-laravel": "^4.3",
        "spatie/laravel-feed": "^4.4",
        "srwiez/thumbhash": "^1.1",
        "stevebauman/purify": "^6.0",
        "symfony/html-sanitizer": "^6.2",
        "symfony/psr-http-message-bridge": "^7.0",
        "thecodingmachine/safe": "^2.2",
        "vinkla/hashids": "^12.0"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.7",
        "barryvdh/laravel-ide-helper": "^3.0",
        "fakerphp/faker": "^1.23",
        "friendsofphp/php-cs-fixer": "^3.0",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.1",
        "nunomaduro/larastan": "^2.0",
        "phpunit/phpunit": "^11.0",
        "spatie/laravel-ignition": "^2.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "php-cs-fixer": [
            "@php vendor/bin/php-cs-fixer fix"
        ],
        "phpstan": [
            "@php vendor/bin/phpstan"
        ],
        "phpunit": [
            "@php vendor/bin/phpunit"
        ],
        "phpunit-coverage": [
            "@php -d xdebug.mode=coverage vendor/bin/phpunit --coverage-text"
        ],
        "phpunit-coverage-report": [
            "@php -d xdebug.mode=coverage vendor/bin/phpunit --coverage-html storage/_reports/coverage/"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
